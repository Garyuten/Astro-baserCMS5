    <script is:inline src={`${basePath}/bc_front/js/startup.bundle.js`}></script>
  </head>
  <body id={bodyClass}>
    <div class="bs-container">
      <header class="bs-header">
        <div class="bs-header__inner">
          <a href={`${basePath}/`} title="baserCMS"><img
